<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.JustBarIt" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/top_bar_color</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.JustBarIt" parent="Base.Theme.JustBarIt" />
    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
        <item name="android:elevation">14dp</item>
        <item name="cardElevation">14dp</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">@dimen/_1sdp</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemActiveIndicatorStyle">@style/itemActiveIndicatorStyle</item>
    </style>

    <style name="itemActiveIndicatorStyle" parent="xxxxxx">
        <item name="android:color">@color/transparent</item>
        <item name="android:animation">@anim/scale_up</item>
    </style>

    <style name="xxxxxx" parent="Widget.Material3.NavigationRailView.ActiveIndicator">
        <item name="android:width">@dimen/_25sdp</item>
        <item name="android:height">@dimen/_25sdp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.M3.Comp.NavigationRail.ActiveIndicator.Shape</item>
    </style>

    <style name="itemActiveIndicatorStyleTransparent" parent="Widget.Material3.NavigationRailView.ActiveIndicator">
        <item name="android:color">@android:color/transparent</item>
        <item name="android:animation">@anim/scale_up</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/_20sdp</item>
        <item name="cornerSizeTopLeft">@dimen/_20sdp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_rating_bar</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:maxHeight">30dp</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Material3.DayNight.BottomSheetDialog">
        <item name="android:windowAnimationStyle">@style/SlideUpSlideDownAnimation</item>
    </style>

    <style name="SlideUpSlideDownAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_bottom_to_top_in</item>
        <item name="android:windowExitAnimation">@anim/anim_top_to_bottom_out</item>
    </style>
</resources>
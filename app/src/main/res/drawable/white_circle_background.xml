<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
  <solid android:color="@android:color/white" />
  <corners android:radius="16dp" /> <!-- Adjust corner radius as needed -->
  <size
      android:width="32dp"
      android:height="32dp" />

  <!-- Shadow -->
  <padding
      android:left="4dp"
      android:top="4dp"
      android:right="4dp"
      android:bottom="4dp" />
  <corners android:radius="16dp" /> <!-- Adjust corner radius to match the background's radius -->
  <stroke
      android:width="2dp"
      android:color="#20000000" /> <!-- Adjust shadow color and opacity -->
</shape>
